<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.effect.DropShadow?>
<?import java.net.URL?>
<BorderPane prefHeight="264.0" prefWidth="271.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" >
    <center>
        <AnchorPane prefHeight="242.0" prefWidth="274.0">
            <stylesheets>
                <URL value="@styles2.css" />
            </stylesheets>
            <VBox fx:id="pureNote" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="252.0" prefWidth="276.0">
                <children>
                    <HBox prefHeight="29.0" prefWidth="403.0">
                        <children>
                            <TextField fx:id="noteTitle" maxWidth="1.7976931348623157E308" prefHeight="27.0" prefWidth="201.0" promptText="Note title" stylesheets="@styles.css">
                                <padding>
                                    <Insets left="20.0" right="20.0" />
                                </padding>
                                <font>
                                    <Font name="DejaVu Serif Condensed Italic" size="13.0" />
                                </font>
                                <opaqueInsets>
                                    <Insets />
                                </opaqueInsets>
                            </TextField>
                            <Button fx:id="openButton" mnemonicParsing="false" onAction="#openInSeparateWindow" prefHeight="26.0" prefWidth="73.0" text="Details" />
                        </children>
                    </HBox>
                    <HBox fx:id="textAndTasks" prefHeight="271.0" prefWidth="256.0">
                        <children>
                            <TextArea id="noteContent" fx:id="noteContent" prefHeight="271.0" prefWidth="274.0" promptText="Here goes note content" stylesheets="@styles.css">
                                <font>
                                    <Font name="DejaVu Serif Condensed Italic" size="13.0" />
                                </font>
                            </TextArea>
                        </children>
                    </HBox>
                </children>
            </VBox>
        </AnchorPane>
    </center>
    <top>
        <AnchorPane prefHeight="27.0" prefWidth="421.0" BorderPane.alignment="CENTER">
            <children>
                <Button layoutX="14.0" layoutY="1.0" mnemonicParsing="false" prefHeight="21.0" prefWidth="27.0" text="X" />
            </children>
        </AnchorPane>
    </top>
</BorderPane>
